<h3 class="text-center">Badges</h3>

<ul>
</ul>

<div class="row">
  <% @user.badges.each do |badge| %>
  <div class="col-sm-4 col-md-2">
    <div class="thumbnail">
      <%= image_tag badge.custom_fields[:url] %>
      <div class="caption">
        <h3><%= badge.name %></h3>
        <p><%= badge.description %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>


